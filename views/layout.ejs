<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=0.8, maximum-scale=1">
    <title>Chat App</title>
    <link rel="shortcut icon" type="image/png" href="/images/icon.png" />
    <script type="text/javascript" src="/js/jquery.min.js"></script>
    <script type="text/javascript" src="/js/bootstrap.min.js"></script>
    <% if (loggedIn) { %>
      <script type="text/javascript" src="/js/PublicChatSocket.js"></script>
      <script type="text/javascript" src="/js/PrivateChatSocket.js"></script>
      <script type="text/javascript" src="/js/generalChatSocket.js"></script>

     <% } %>
    


    <script src="/socket.io/socket.io.js"></script> 
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <div>
      <a href="/">Home</a><br>
      <a href="/chat">Chat</a><br><br>
    </div>
    <div class="flashes" >
      <% if (flashMessages) { %>
     
        <% for (messageKey in flashMessages) { %>
      
      <div class="flash <%= messageKey %>"><%= flashMessages[messageKey] %> </div>
        <% }  %>
      
      <% } %>
    </div>
    <a href="/chat" class="chat-icon">R</a>

    <div class="login-status">
			<% if (loggedIn) { %>
			<div class="bubble logged-in">
        <input type="hidden" id="current-user" value="<%= currentUser._id %>">
				Logged in as <%= currentUser.fullName %>
			</div>
			<div class="log-out">
				<a href="/logout">Log out</a>
			</div>
			<%} else {%>
        <input type="hidden" id="current-user" value="">
				<div class="bubble" style="margin-bottom: 10px;">
					<a href="/sign-up">Sign up</a>
				</div>
			<div class="bubble log-in">
				<a href="/login">Log In</a>
			</div>
			<% } %>
		</div>
	</div>

    
  
    <div>
      <%-body%>
    </div>
  </body>
</html>